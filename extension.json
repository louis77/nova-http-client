{
    "identifier": "louis77.http-client",
    "name": "HTTP Client",
    "organization": "Louis Brauer <louis@brauer.family>",
    "description": "Make HTTP calls from Nova",
    "version": "1.4.0",
    "categories": ["languages", "commands", "tasks"],
    "main": "main.js",
    "license": "GPL-3.0-or-later",
    "repository": "https://github.com/louis77/nova-http-client",
    "bugs": "https://github.com/louis77/nova-http-client/issues",
    "funding": "https://www.paypal.com/donate/?hosted_button_id=T5QY5WE7AV2T6",
    "activationEvents": [
        "onLanguage:http"
    ],
    "entitlements": {
        "requests": true,
        "filesystem": "readonly"
    },
    "commands": {
        "editor": [
            {
                "title": "Run HTTP",
                "command": "runHTTP",
                "shortcut": "cmd-r",
                "when": "editorHasFocus",
                "filters": {
                    "syntaxes": ["http"]
                }
            }
        ]
    }
}
