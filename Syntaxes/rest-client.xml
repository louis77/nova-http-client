<?xml version="1.0" encoding="UTF-8"?>
<syntax name="http">
    <meta>
        <name>HTTP/REST</name>
        <type>structured</type>
        <preferred-file-extension>http</preferred-file-extension>
    </meta>
    
    <detectors>
        <extension priority="1.0">http,rest</extension>
    </detectors>
    
    <comments>
        <single>
            <expression>#</expression>
        </single>
    </comments>
    
    <scopes>
        <scope name="http.keyword">
            <strings>
                <string>GET</string>
                <string>POST</string>
                <string>PUT</string>
                <string>PATCH</string>
                <string>DELETE</string>
                <string>HEAD</string>
            </strings>
        </scope>
    </scopes>
    
    <collections>
        <collection name="verbs">
            <scope name="http.keyword">
                <strings>
                    <string>GET</string>
                    <string>POST</string>
                    <string>PUT</string>
                    <string>PATCH</string>
                    <string>DELETE</string>
                    <string>HEAD</string>
                </strings>
            </scope>
        </collection>
    </collections>
</syntax>
